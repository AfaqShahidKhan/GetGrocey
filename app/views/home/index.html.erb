<div class="bg-gray-600 text-white" style="text-align: center; padding-top: 5rem; padding-bottom: 5rem; margin-bottom: 2.5rem;">
  <h1 class="text-2xl font-bold mb-4">Welcome to GetGrossy</h1>
  <p class="text-xl mb-4">Your one stop-shop for all your e-commerace needs!</p>
<%= link_to "Shop Now", root_path , class: "bg-gray-500 hover:bg-gray-600 text-white font-bold rounded", style:"padding-top: 0.5rem; padding-bottom: 0.5rem; padding-left: 1rem; padding-right: 1rem;" %>
</div>

<div class="flex flex-wrap mt-4 gap-10" style="justify-content: center; align-items: center; margin-top: 8px;" >
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <%= category.image.present? ? image_tag(category.image, style: "width: 320px; height: 200px; object-fit: cover;") : image_tag("http://via.placeholder.com/200x200", style: "width: 320px; height: 200px; object-fit: cover;") %>
        <h2 class="text-gray-600 font-medium text-lg mb-6 mt-4" style="text-align: center;"><%= category.name %></h2>
      </div>
    <% end %>
  <% end %>
</div>

